                        <ComboBoxItem Content="Macédonien" Tag="mk"/>
                        <ComboBoxItem Content="Norvégien" Tag="no"/>
                        <ComboBoxItem Content="Néerlandais" Tag="nl"/>
                        <ComboBoxItem Content="Polonais" Tag="pl"/>
                        <ComboBoxItem Content="Portugais" Tag="pt"/>
